#!/bin/bash

if ! [[ -x "$(command -v carthage)" ]]; then
    echo "Error: Carthage is not installed."
    echo "See https://github.com/Carthage/Carthage for installation."
    exit 1
fi

CMD="bootstrap"
if [[ $1 == "update" ]]; then
    CMD="update"
fi

carthage $CMD --use-submodules --no-use-binaries --new-resolver
